<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/matchzhibo"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lineqiudui1">

        <ImageView
            android:id="@+id/team1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamname1"
            android:text="球队1"
            android:layout_gravity="center"
            android:layout_below="@+id/team1"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvscore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="#0a0909"
        android:textSize="40sp"
        android:layout_toLeftOf="@+id/maohao"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:id="@+id/maohao"
        android:textColor="#0a0909"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tvscore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="#0a0909"
        android:textSize="40sp"
        android:layout_toRightOf="@+id/maohao"
        />
    <TextView
        android:id="@+id/scoretime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b3b4ae"
        android:layout_below="@id/maohao"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="未开始" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lineqiudui2"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:id="@+id/team2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamname2"
            android:text="球队2"
            android:layout_gravity="center"
            android:layout_below="@+id/team2"
            />
    </LinearLayout>
</RelativeLayout>